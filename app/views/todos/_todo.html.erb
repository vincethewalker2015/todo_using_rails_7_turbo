<div id="<%= "#{dom_id(todo)}_item" %>">
  <p>
    <!-- <strong>Title:</strong> -->
    <div class="card">
      <div class="card-body">
        <div class="">
          <%= turbo_frame_tag dom_id(todo) do %>
          <%#= link_to todo.title, edit_todo_path(todo) %>

          <div class="d-inline align-items-center"><%= todo.title %>
          <div class="d-flex float-end  text-white"><%= button_to "Edit", edit_todo_path(todo), class: "btn btn-warning btn-sm m-1" %></div>
          <div class="d-flex float-end text-white"><%= button_to "Delete", todo_path(todo), method: :delete, class: "btn btn-danger btn-sm m-1" %></div>
        </div>
      </div>
    </div>
  <% end %>
  </p>
</div>
